<apex:page controller="ctu.CloneThisUserSuccess" sidebar="false" standardStylesheets="false" showHeader="false" doctype="html-5.0">
 <apex:includeScript value="{!URLFOR($Resource.ctu__Bootstrap, 'js/jquery-3.6.0.min.js')}"/> 
 <!-- Latest compiled and minified CSS -->
<apex:stylesheet value="{!URLFOR($Resource.ctu__Bootstrap, 'css/bootstrap.min.css')}"/>
<apex:stylesheet value="{!URLFOR($Resource.ctu__Bootstrap, 'css/bootstrap-grid.min.css')}"/>
<apex:stylesheet value="{!URLFOR($Resource.ctu__Bootstrap, 'css/bootstrap-reboot.min.css')}"/>

 <!-- Latest compiled and minified JavaScript --> 
 <apex:includeScript value="{!URLFOR($Resource.ctu__Bootstrap, 'js/bootstrap.min.js')}"/> 
 <apex:includeScript value="{!URLFOR($Resource.ctu__Bootstrap, 'js/bootstrap.bundle.min.js')}"/>
 
 <!-- <script src="https://mobile1.t.salesforce.com/soap/ajax/33.0/connection.js" type="text/javascript" /> -->
 <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"></meta> 

<style>
    .row{
        font-size: 14px !important;
        flex-direction: column;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .col-xs-11.col-xs-offset-1 {
        width: 100%;
    }
    .col-xs-6.col-xs-offset-3 {
        width: 50%;
    }
</style>

<script>



function userNavigation(userId){

    if( (typeof sforce != 'undefined') && (typeof sforce.one != 'undefined') && (sforce.one != null) ) {

        // In Salesforce1, navigate to create account record standard page
       // sforce.one.createRecord("Account");
       
       sforce.one.navigateToSObject(userId);

    }else{
        //navigate to vf page
        
        
        var urlRed = '/' + userId +'?noredirect=1';
        //window.location.assign(urlRed);
        
         // Desktop navigation
        window.open(urlRed);
    }

}

</script>

<div class="container" style="margin-top: 1%; margin-bottom: 1%;">
    <div class="row mainRow">
        <div class="col-xs-12 col-lg-12 ">
            <apex:outputLabel styleClass="bg-success" style="padding: 1%;font-size: large;display: block; text-align: center;color: #7ba119;font-family: arial,helvetica,sanz;  background-color:#d8f482 !important;" value="Your user was successfully cloned" />
        </div>
    </div>
    <br/>
    <div class="row mainRow">
        <div class="col-xs-3 col-xs-offset-3">
            New User
        </div>
        <div class="col-xs-3">
            <a  onclick="userNavigation('{!JSENCODE(currentNewUserId)}');" style="font-size: 16px;color: #7ba119;" >{!newUser.Name}</a>
        </div>
    </div>
    <br/>
    <div class="row mainRow">
        <div class="col-xs-3 col-xs-offset-3">
            Cloned From
        </div>
        <div class="col-xs-3">
            <a   onclick="userNavigation('{!JSENCODE(currentOldUserId)}');"  style="font-size: 16px;color: #7ba119;" >{!oldUser.Name}</a>
        </div>
    </div>
    <br/>
    <div class="row mainRow">
        <div class="col-xs-3 col-xs-offset-3">
            Generated Password?
        </div>
        <div class="col-xs-3">
            {!IF(generated, 'YES', 'NO')}
        </div>
    </div>
    <br/>
    <div class="row mainRow">
        
        <div class="col-xs-6 col-xs-offset-3" style="font-size: 18px; color: #333333">
            List of things cloned
        </div>
        
        <div class="col-xs-6 col-xs-offset-3">
            <div class="row" style="margin-top:1%;">
                <div class="col-xs-11 col-xs-offset-1">
                    <br/>
                    <span style="font-weight: bold; color: #999999">Fields</span>
                     <hr style="background:#999999; border:0; height:2px" />
                </div>
            </div>
            <div class="col-xs-11 col-xs-offset-1" style="display: flex;flex-wrap: wrap;">
                <apex:repeat value="{!clonedFields}" var="clon">
                    <div class="col-xs-12 col-sm-6" style="flex: 1 0 50%;">{!clon}</div>
                </apex:repeat>
            </div>
            <div class="row">
                <div class="col-xs-11 col-xs-offset-1">
                <br/>
                    <span style="font-weight: bold; color: #999999">Advanced options</span>
                     <hr style="background:#999999; border:0; height:2px;" />
                </div>
            </div>
            <div class="col-xs-11 col-xs-offset-1">
                <apex:repeat value="{!clonedThings}" var="clon">
                    <div class="col-xs-12">
                        {!clon}
                    </div>
                </apex:repeat>
            </div>
        </div>
    </div>
    <br/>
    <div class="row mainRow">
        <div class="col-xs-9 col-xs-offset-3 hidden-xs">
            <a  target='_blank' href="/0A3?setupid=ImportedPackage&retURL=%2Fui%2Fsetup%2FSetup%3Fsetupid%3DStudio" style="font-size: 16px;color: #7ba119;">View Managed Packages - In case you need to assign the new user to a managed package that requires a license.</a>
        </div>
    </div>
    <div class="row mainRow">
        <div class="col-xs-6 col-xs-offset-3" style="font-size: 18px; color: #333333">
            <a  target='_self' href="/" type="button" style="font-size: 16px;color: #7ba119;">Go Back Home</a>
        </div>
    </div>
    
</div>

</apex:page>